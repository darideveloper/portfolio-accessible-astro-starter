---
import { Link } from 'accessible-astro-components'

import { Image } from 'astro:assets'
import logoImage from '../assets/images/logo-smooth-software-solutions-desarrollo-web-3s.webp'

/**
 * Logo Component
 *
 * @description Logo description
 */
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<Link
  href='/'
  class='mt-6 flex flex-col items-center gap-2'
>
  <Image
    src={logoImage}
    alt='Accessible Astro Logo'
    width={100}
    height={71}
    loading={loading}
  />
  <span class='text-center text-xs font-bold'>Smooth Software<br />Solutions</span>
</Link>
