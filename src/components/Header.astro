---
import Navigation from '../components/Navigation.astro'
import { DarkMode, Link, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */

import { whatsappLink, email } from '../lib/constants/contact'
---

<header>
  <SkipLink />
  <Navigation>
    <li class='menu-item'>
      <Link href='/'>Home</Link>
    </li>
    <li class='menu-item'>
      <Link href='/blog/'>Blog</Link>
    </li>
    <li class='menu-item'>
      <Link href='/portfolio/'>Portfolio</Link>
    </li>
    <li class='menu-item'>
      <Link href='/sitemap/'>Sitemap</Link>
    </li>
    <li class='menu-item has-dropdown'>
      <button
        aria-haspopup='true'
        aria-expanded='false'
      >
        Contacto
        <Icon
          aria-hidden='true'
          name='lucide:chevron-down'
          size='32'
        />
      </button>
      <ul class='dropdown-menu'>
        <li class='submenu-item'>
          <Link href='/contact'>Formulario de contacto</Link>
        </li>
        <li class='submenu-item'>
          <Link href='/quote'>Cotiza tu proyecto</Link>
        </li>
        <li class='submenu-item'>
          <Link
            href={whatsappLink}
            target='_blank'
            >WhatsApp</Link
          >
        </li>
        <li class='submenu-item'>
          <Link
            href={`mailto:${email}`}
            target='_blank'
            >Email</Link
          >
        </li>
      </ul>
    </li>
    <li class='menu-item highlight'>
      <Link href='/quote/'>Cotiza tu proyecto</Link>
    </li>
    <li class='menu-item type-icon animate-rotate'>
      <Link
        href={whatsappLink}
        target='_blank'
      >
        <Icon
          aria-hidden='true'
          name='lucide:phone'
        />
        <span class='sr-only'>Go to the GitHub page</span>
      </Link>
    </li>
    <li class='menu-item type-icon animate-rotate'>
      <Link href='/quote/'>
        <Icon
          aria-hidden='true'
          name='lucide:dollar-sign'
        />
        <span class='sr-only'>Go to the GitHub page</span>
      </Link>
    </li>
    <li class='menu-item type-icon animate-rotate'>
      <DarkMode>
        <Icon
          aria-hidden='true'
          name='lucide:moon'
          slot='light'
        />
        <Icon
          aria-hidden='true'
          name='lucide:sun'
          slot='dark'
        />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang='scss' is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>
