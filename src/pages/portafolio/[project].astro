---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import SocialShares from '@components/SocialShares.astro'
import { Heading } from 'accessible-astro-components'
import { getCollection, render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'
import { getProjectFeaturedImage } from '@/utils/getProjectImage'

export async function getStaticPaths() {
  const projects = await getCollection('projects')

  return projects.map((project) => {
    // Use utility function to get project image from frontmatter
    const featuredImage = getProjectFeaturedImage(project.id, project.data)

    const projectWithImage = {
      ...project,
      featuredImage,
    }

    return {
      params: { project: project.id },
      props: { project: projectWithImage },
    }
  })
}

interface Props {
  project: CollectionEntry<'projects'> & { featuredImage: string }
}

const { project } = Astro.props
const { Content } = await render(project)

const author = {
  name: project.data.author,
  image: '/logo-smooth-software-solutions-desarrollo-web-3s-small.webp',
  bio: 'Empresa de desarrollo de software',
}
---

<DefaultLayout
  title={project.data.title}
  description={project.data.description}
  url={`/portafolio/${project.id}`}
  breadcrumbs={[
    { name: 'Home', item: Astro.site },
    { name: 'Portafolio', item: `${Astro.site}portafolio` },
    { name: project.data.title, item: Astro.url.href },
  ]}
>
  <PageHeader
    title={project.data.title}
    subtitle={project.data.description}
    author={author}
    bgType='bordered'
    featuredImage={project.featuredImage}
  />
  <section class='my-12'>
    <div class='narrow space-content container'>
      <Content />
    </div>
  </section>
  <section class='my-12'>
    <div class='narrow space-content container'>
      <Heading level='h2'>Compartir este proyecto</Heading>
      <p>¿Te gusta este proyecto? ¡Comparte con tus redes sociales!</p>
      <SocialShares />
    </div>
  </section>
</DefaultLayout>

<style lang='scss' is:global>
  .narrow {
    margin-inline: auto;
    max-width: 65ch;
  }
</style>
